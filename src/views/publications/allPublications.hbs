            <!-- Profile Header -->

<div class="card profile-header">
    
    <div class="profile-header-div">
        <img class="profilePic" src="{{profilePic user.Google.profilePicId}}" alt="{{user.user}}">
        <span class="username-text">
            {{user.user}}
            {{#when user.user 'eq' currentUser.user}}
            <a href="/profile/edit" class="btn btn-primary edit-profile-button">Editar perfil</a>
            {{/when}}
        </span>
    </div>
    <p class="profile-description">{{user.description}}</p>
</div>
            <!-- user's publications -->
<div class="col-xs-12">
    {{#if publications}}
        {{> publication}}
    {{else}}
        <div class="card mx-auto">
            <div class="card-body">
                <p class="lead">No publicaste nada :(</p>
                <a href="/upload" class="btn btn-success btn-block">Publica algo!</a>
            </div>
        </div>
    {{/if}}
</div>