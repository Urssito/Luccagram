<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h2>Editar nota</h2>
        </div>
        <div class="card-body">
            <form action="/editSuccess/{{editNote._id}}?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="titulo" value="{{editNote.title}}">
                </div>
                <div class="form-group">
                    <textarea name="publication" class="form-control">{{editNote.publication}}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit"> Editar </button>
                </div>
            </form>
        </div>
    </div>
</div>